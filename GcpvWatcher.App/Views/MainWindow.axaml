<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GcpvWatcher.App.ViewModels"
        xmlns:converters="using:GcpvWatcher.App.Converters"
        x:Class="GcpvWatcher.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="GcpvWatcher Directory Monitor"
        Width="600" Height="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:RacersToStringConverter x:Key="RacersToStringConverter" />
    </Window.Resources>
    
    <Window.Styles>
        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Margin" Value="0,0,2,0" />
            <Setter Property="Background" Value="LightGray" />
            <Setter Property="BorderBrush" Value="DarkGray" />
            <Setter Property="BorderThickness" Value="1,1,1,0" />
            <Setter Property="CornerRadius" Value="4,4,0,0" />
        </Style>
        
        <Style Selector="TabItem:selected">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="DarkGray" />
            <Setter Property="BorderThickness" Value="1,1,1,0" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        
        <Style Selector="TabItem:pointerover">
            <Setter Property="Background" Value="WhiteSmoke" />
        </Style>
        
        <Style Selector="TabControl">
            <Setter Property="BorderBrush" Value="DarkGray" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="White" />
        </Style>
    </Window.Styles>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="GCPV FinishLynx Bridge" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,30" />

        <!-- Watch Directory Section -->
        <TextBlock Grid.Row="1" 
                   Text="Watch Directory:" 
                   FontSize="14" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,5" />
        
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" 
                     Text="{Binding WatchDirectory}" 
                     IsReadOnly="True" 
                     FontSize="12" 
                     Margin="0,0,10,0" />
            
            <Button Grid.Column="1" 
                    Content="Browse..." 
                    Command="{Binding BrowseWatchDirectoryCommand}" 
                    Width="80" 
                    Height="30" />
        </Grid>

        <!-- FinishLynx Event Directory Section -->
        <TextBlock Grid.Row="3" 
                   Text="FinishLynx Event Directory:" 
                   FontSize="14" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,5" />
        
        <Grid Grid.Row="4" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" 
                     Text="{Binding FinishLynxDirectory}" 
                     IsReadOnly="True" 
                     FontSize="12" 
                     Margin="0,0,10,0" />
            
            <Button Grid.Column="1" 
                    Content="Browse..." 
                    Command="{Binding BrowseFinishLynxDirectoryCommand}" 
                    Width="80" 
                    Height="30" />
        </Grid>

        <!-- Status Section -->
        <Grid Grid.Row="5" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="Status:" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0" />
            
            <TextBlock Grid.Column="1" 
                       Text="{Binding Status}" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center" 
                       Foreground="{Binding StatusColor}" />
        </Grid>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Spacing="15"
                    Margin="0,0,0,20">
            <Button Content="Start Watching" 
                    Command="{Binding StartWatchingCommand}" 
                    IsEnabled="{Binding CanStartWatching}"
                    Width="120" 
                    Height="35" />
            <Button Content="Stop Watching" 
                    Command="{Binding StopWatchingCommand}" 
                    IsEnabled="{Binding CanStopWatching}"
                    Width="120" 
                    Height="35" />
            <Button Content="Close" 
                    Command="{Binding CloseCommand}" 
                    Width="80" 
                    Height="35" />
        </StackPanel>

        <!-- Tabbed Content -->
        <TabControl Grid.Row="7" Margin="0,0,0,0">
            <TabItem Header="Races">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding Races}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="LightGray" 
                                        BorderBrush="DarkGray" 
                                        BorderThickness="1" 
                                        CornerRadius="3" 
                                        Margin="0,2" 
                                        Padding="8">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Race " 
                                                       FontWeight="Bold" 
                                                       FontSize="12" />
                                            <TextBlock Text="{Binding RaceNumber}" 
                                                       FontWeight="Bold" 
                                                       FontSize="12" />
                                        </StackPanel>
                                        <TextBlock Text="{Binding RaceTitle}" 
                                                   FontSize="11" 
                                                   Margin="0,2,0,0" />
                                        <StackPanel Orientation="Horizontal" Margin="0,1,0,0">
                                            <TextBlock Text="{Binding NumberOfLaps}" 
                                                       FontSize="10" 
                                                       Foreground="DarkBlue" />
                                            <TextBlock Text=" laps" 
                                                       FontSize="10" 
                                                       Foreground="DarkBlue" />
                                        </StackPanel>
                                        <TextBlock Text="{Binding Racers, Converter={StaticResource RacersToStringConverter}}" 
                                                   FontSize="9" 
                                                   FontFamily="Consolas, Courier New, monospace"
                                                   Foreground="DarkGreen" 
                                                   Margin="0,1,0,0" 
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="Log">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding LogContent}" 
                             IsReadOnly="True" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True" 
                             FontFamily="Consolas, Courier New, monospace" 
                             FontSize="11" 
                             Background="White" 
                             Foreground="Black" 
                             BorderThickness="0" />
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

